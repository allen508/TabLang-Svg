{
    "include": ["src/**/*"],
    "compilerOptions": {
        "lib": ["es2022"],
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
        "outDir": "./lib",
        "declaration": true,
	}
}
